- model_class = Hoge
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:location)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @hoges.each do |hoge|
      %tr
        %td= link_to hoge.id, hoge_path(hoge)
        %td= hoge.name
        %td= hoge.location
        %td= l hoge.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_hoge_path(hoge), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), hoge_path(hoge), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_hoge_path, :class => 'btn btn-primary'
